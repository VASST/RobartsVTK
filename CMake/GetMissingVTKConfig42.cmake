  ENDIF(PNG_FOUND)
ELSE (${VTK42_VTK_USE_SYSTEM_PNG})
  # Use VTK library
  SET(VTK_PNG_LIBRARIES vtkpng)
ENDIF (${VTK42_VTK_USE_SYSTEM_PNG})
MESSAGE(STATUS "Loaded PNG ${VTK_PNG_LIBRARIES}")

