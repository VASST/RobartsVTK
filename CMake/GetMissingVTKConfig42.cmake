LOAD_CACHE(${VTK_DIR} READ_WITH_PREFIX VTK42_
  VTK_USE_SYSTEM_ZLIB
  VTK_USE_SYSTEM_PNG
  VTK_USE_SYSTEM_TIFF
  VTK_USE_SYSTEM_EXPAT
)

MESSAGE(STATUS "VTK Use System ZLIB  ${VTK42_VTK_USE_SYSTEM_ZLIB}")
MESSAGE(STATUS "VTK Use System PNG   ${VTK42_VTK_USE_SYSTEM_PNG}")
